<div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone round image" style="background-image: url('<%= story.preferred_story.img_link %>');">
  <button id="<%= story.preferred_story.id %>" class="mdl-button mdl-js-button mdl-button--icon mdl-color--orange-300">
    <i class="material-icons">more_vert</i>
  </button>

  <div class="photo-overlay">
    <span class="mdl-typography--display-2 mdl-color-text--white"><%= link_to story.preferred_story.title, story.preferred_story.url %></span><br>
    <span class="mdl-typography--headline mdl-color-text--white"><%= story.preferred_story.summary %></span><br>
    <span class="mdl-typography--headline mdl-color-text--grey-500"><%= story.preferred_story.news_source(story.section_id) %></span>

    <ul for="<%= story.preferred_story.id %>" class="mdl-menu mdl-menu--bottom-right mdl-js-menu">
      <p class="mdl-menu__item">Related:</p>
      <% story.other_sources.each do |related| %>
        <li class="mdl-menu__item"><%= link_to related.title, related.url %> <span class="mdl-color-text--grey-500">--<%= related.news_source(story.section_id) %></span></li>
      <% end %>
    </ul>
  </div>
</div>
