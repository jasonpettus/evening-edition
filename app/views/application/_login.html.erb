<% if flash['login_error'] %>
  <p class="center bold mdl-color--deep-purple-500 mdl-color-text--black-A700">Incorrect Email or Password</p>
<% end %>

<div class="login_box">
  <%= form_tag("/users/login", method: 'POST', id: 'login-form') do %>
    <%= text_field_tag 'email', nil, placeholder: 'Email' %>
    <%= text_field_tag 'password', nil, placeholder: 'Password' %>
    <%= submit_tag 'Login' %>
  <% end %>
</div>
