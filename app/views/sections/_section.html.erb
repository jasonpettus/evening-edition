<div class="list-left section-box">
  <span class="vertical-center">
    <%= form_tag("/sections/#{ section.id }", method: :delete, class: 'inline delete-section') do %>
      <%= submit_tag 'Delete' %>
    <% end %>
    <%= form_tag(edit_section_path( section ), method: :get, class: 'inline rename-section') do %>
      <%= submit_tag 'Rename' %>
    <% end %>
  </span>

  <span class="mdl-typography--display-2 inline">
    <%= link_to "#{ section.title }", section_path( section ) %>
  </span>
</div>

<div class="pd-2">
  <% if @subscription.errors.any? %>
    <% @subscription.errors.full_messages do |msg| %>
      <p class="center bold mdl-color--deep-purple-500 mdl-color-text--black-A700"><%= msg %></p>
    <% end %>
  <% end %>

  <p>
    <%= form_for @subscription, url: "/sections/#{section.id}/subscriptions", method: 'POST' do |f| %>
      <%= f.text_field :name, class: 'list-left w-50', placeholder: 'Subscription Name' %>
      <%= f.text_field :feed, class: 'list-left w-50', placeholder: 'RSS feed' %>
      <%= f.submit value: 'Add Feed', class: 'inline fl-r' %>
     <% end %>
  </p>
